<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    <LinearLayout
        android:id="@+id/llayout_home"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/im_home"
            android:focusable="false"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tabbar_home_normal"/>
        <TextView
            android:id="@+id/tv_home"
            android:focusable="false"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="首页"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llayout_order"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/im_order"
            android:focusable="false"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tabbar_order_normal"/>
        <TextView
            android:id="@+id/tv_order"
            android:focusable="false"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="订单"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llayout_shopping_car"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/im_shopping_car"
            android:focusable="false"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tabbar_shopping_car_normal"/>
        <TextView
            android:id="@+id/tv_shopping_car"
            android:focusable="false"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="购物车"/>
    </LinearLayout>
</LinearLayout>